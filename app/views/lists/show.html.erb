<div class="container">
  <h1><%= @list.name %></h1>
  <ul class="list-group">
    <% @list.bookmarks.each do |bookmark| %>
      <li class="list-group-item d-flex justify-content-between align-items-venter">
        <%= bookmark.movie.title %>
        <span class="badge badge-primary badge-pill"><%= bookmark.movie.rating %></span>
        <%= link_to  "Remove", bookmark_path(bookmark), method: :delete, data: { confirm: 'Are you sure?' }%>
      </li>
    <% end %>
  </ul>
  <%= link_to 'Back to all lists', lists_path %>
  <%= link_to 'Add a movie to the list', new_list_bookmark_path(@list) %>
</div>